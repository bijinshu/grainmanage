<div id="full" class='weui-popup__container' style="z-index:600;">
    <div class="weui-popup__overlay"></div>
    <div class="weui-popup__modal">
        <div class="toolbar">
            <div class="toolbar-inner">
                <a href="javascript:;" class="picker-button close-popup">关闭</a>
                <h2 class="title" style="color: #3cc51f;font-size:24px;">{{frm.CompName}}</h2>
            </div>
        </div>
        <div class="modal-content">
            <div class="weui-cells weui-cells_checkbox">
                <div class="weui-cell weui-check__label" v-for="(item,index) in productList">
                    <div class="weui-cell__hd">
                        <input type="checkbox" class="weui-check" v-bind:value="item.Id+':'+item.Price+':'+item.PreWeight" v-bind:id="'s'+index">
                        <i class="weui-icon-checked"></i>
                    </div>
                    <div class="weui-cell__bd">
                        <label v-bind:for="'s'+index" style="display:block">
                            <span>{{item.Name}}</span>&nbsp;&nbsp;&nbsp;&nbsp;
                            <span style="color:blueviolet;font-weight:bold;">{{item.Price}}</span>&nbsp;元/斤
                        </label>
                        <div>
                            <label v-bind:for="'s'+index">预估：</label>
                            <input type="number" pattern="[0-9]+" style="padding:2px;" v-model="item.PreWeight" placeholder="请输入预估重量" />&nbsp;斤
                        </div>
                    </div>
                </div>
            </div>
            <div class="weui-cells weui-cells_form">

                <div class="weui-cell ">
                    <div class="weui-cell__hd">
                        <label class="weui-label">手机号</label>
                    </div>
                    <div class="weui-cell__bd">
                        <input class="weui-input" type="tel" placeholder="请输入手机号">
                    </div>
                </div>
                <div class="weui-cell">
                    <div class="weui-cell__bd">
                        <textarea class="weui-textarea" placeholder="其他说明" rows="3"></textarea>
                        <div class="weui-textarea-counter"><span>0</span>/600</div>
                    </div>
                </div>
            </div>
            <div class="weui-btn-area" style="text-align:center;margin-top:0;">
                <a href="javascript:;" class="weui-btn weui-btn_mini weui-btn_primary" style="display:inline-block; width:40%;" v-on:click="sendOrder">确定</a>
                <a href="javascript:;" class="weui-btn weui-btn_mini weui-btn_primary close-popup" style="display:inline-block;width:40%;" id="closePopup">关闭</a>
            </div>
        </div>
    </div>
</div>