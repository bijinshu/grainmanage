<div id="companyPreview" class='weui-popup__container' style="z-index:600;">
    <div class="weui-popup__overlay"></div>
    <div class="weui-popup__modal">
        <header class='demos-header' style="padding-bottom:2px;">
            <h2 class="demos-second-title">{{currentCompany.CompanyName}}</h2>
            <p style="text-align:center;"><img v-bind:src="currentCompany.ImgName|imgUrl" /></p>
        </header>
        <div class="weui-form-preview">
            <div class="weui-form-preview__hd">
                <div class="weui-form-preview__item">
                    <label class="weui-form-preview__label">本月订单数</label>
                    <em class="weui-form-preview__value">{{currentCompanyOrderCount}}</em>
                </div>
            </div>
            <div class="weui-form-preview__bd">
                <div class="weui-form-preview__item" v-for="item in currentCompany.Products">
                    <label class="weui-form-preview__label">{{item.Name}}</label>
                    <span class="weui-form-preview__value"><span style="color:blueviolet;">{{item.Price}}</span>&nbsp;元/斤</span>
                </div>
            </div>
            <a href="javascript:;" class="weui-btn weui-btn_primary close-popup" style="margin:0 2px;">关闭</a>
        </div>
    </div>
</div>