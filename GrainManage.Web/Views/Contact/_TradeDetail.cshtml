<div class="modal fade" id="saveTradeModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title text-center" id="myModalLabel" style="font-weight:bold;">新增交易</h4>
            </div>
            <div class="modal-body ">
                <div class="row" style="margin-top:20px;">
                    <div class="col-md-12">
                        <form class="form-horizontal" role="form">
                            <div class="form-group" style="display:none;">
                                <input v-model="frmTrade.ContactId" type="hidden" class="form-control" id="Id">
                            </div>
                            <div class="form-group" v-bind:class="{'has-error':!isContactNameValid}">
                                <label for="ContactName" class="col-md-3 control-label hidden-xs hidden-sm">联系人名称</label>
                                <div class="col-md-8">
                                    <input v-model="frm.ContactName" type="text" class="form-control" id="ContactName" placeholder="请输入联系人名称">
                                </div>
                                <span v-if="!isContactNameValid" class="col-md-push-3 col-md-8" style="color:red">联系人名称只能由2-4个汉字组成</span>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label hidden-xs hidden-sm">交易类型</label>
                                <div class="col-md-8">
                                    <label class="checkbox-inline">
                                        <input value="0" v-model="frmTrade.TradeType" type="radio"><span>收购</span>
                                    </label>
                                    <label class="checkbox-inline">
                                        <input value="1" v-model="frmTrade.TradeType" type="radio"><span>出售</span>
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label hidden-xs hidden-sm">产品名称</label>
                                <div class="col-md-8">
                                    <label class="checkbox-inline" v-for="item in productList">
                                        <input v-bind:value="item.Id" v-model="frmTrade.ProductId" type="radio"><span>{{item.Name}}</span>
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Price" class="col-md-3 control-label hidden-xs hidden-sm">价格</label>
                                <div class="col-md-8">
                                    <input v-model="frmTrade.Price" type="number" class="form-control" id="Price" placeholder="请输入价格（元/斤）">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Weight" class="col-md-3 control-label hidden-xs hidden-sm">重量</label>
                                <div class="col-md-8">
                                    <input v-model="frmTrade.Weight" type="number" class="form-control" id="Weixin" placeholder="请输入重量（斤）">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="TotalMoney" class="col-md-3 control-label hidden-xs hidden-sm">金额</label>
                                <div class="col-md-8">
                                    <input type="text" readonly class="form-control" id="QQ" placeholder="金额" v-bind:value="frmTrade.Price*frmTrade.Weight">
                                </div>
                            </div>
                            <div class="form-group" v-bind:class="{'has-error':!isRemarkValid}">
                                <label for="Remark" class="col-md-3 control-label hidden-xs hidden-sm">其他信息</label>
                                <div class="col-md-8">
                                    <textarea v-model="frmTrade.Remark" class="form-control" rows="4" id="Remark" placeholder="请输入其他信息"></textarea>
                                </div>
                                <span v-if="!isRemarkValid" class="col-md-push-3 col-md-8" style="color:red">附加信息不能超过200个字符</span>
                            </div>
                            <div class="form-group">
                                <div class="col-md-8 col-md-offset-3">
                                    <button class="btn btn-info pull-left" data-dismiss="modal"> 关闭</button>
                                    <button class="btn btn-primary pull-right" v-on:click.stop.prevent="saveTrade" v-bind:disabled="IsDisabled">保存</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>