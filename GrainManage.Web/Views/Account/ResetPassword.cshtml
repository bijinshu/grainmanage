@using GrainManage.Web
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@GlobalResx.SysName</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/vue.min.js"></script>
    <script src="~/Scripts/components/modal-dialog.js"></script>
</head>
<body>
    <div class="container" id="app">
        <div class="row" style="margin-top:20px;">
            <div class="col-md-offset-2 col-md-8">
                <ol class="breadcrumb" style="font-size:20px;">
                    <li><a href="#">@GlobalResx.SysName</a></li>
                    <li><a href="#" class="active">重设密码</a></li>
                </ol>
            </div>
        </div>
        <form class="form-horizontal" role="form" style=" padding: 15px; margin: auto auto;">
            <div class="form-group" v-bind:class="{'has-error':!isUserNameValid}">
                <label for="UserName" class="col-md-2 control-label">用户名</label>
                <div class="col-md-8">
                    <input v-model="frm.UserName" type="text" class="form-control" id="UserName" placeholder="请输入用户名">
                </div>
                <span v-if="!isUserNameValid" class="col-md-2" style="color:red">用户名只能为手机号码或由2-20个英文字母、下划线及数字组成</span>
            </div>
            <div class="form-group" v-bind:class="{'has-error':!isEmailValid}">
                <label for="Email" class="col-md-2 control-label">邮箱地址</label>
                <div class="col-md-8">
                    <input v-model="frm.Email" type="text" class="form-control" id="Email" placeholder="请输入邮箱地址">
                </div>
                <span v-if="!isEmailValid" class="col-md-2" style="color:red">邮箱格式不正确</span>
            </div>
            <div class="row">
                <div class="col-md-offset-2 col-md-4">
                    <button v-on:click.stop.prevent="resetPwd" v-bind:disabled="IsDisabled" class="btn btn-primary ">保存</button>
                </div>
                <div class="col-md-4">
                    <a href="@HttpUtil.GetUrl("Account/SignIn")">返回登录页</a>
                </div>
            </div>
        </form>
        <modal-dialog title="重设密码提示" v-bind:msg="msg"></modal-dialog>
    </div>
    <script>
        $(function () {
            new Vue({
                el: '#app',
                data: {
                    frm: {
                        UserName: '',
                        Email: ''
                    },
                    IsDisabled: false,
                    msg: ''
                },
                methods: {
                    resetPwd: function (event) {
                        if (this.isUserNameValid && this.isEmailValid) {
                            this.IsDisabled = true;
                            $.post('@HttpUtil.GetUrl("Account/ResetPassword")', this.frm).always(function (result, status) {
                                this.IsDisabled = false;
                                if (result.code == 1) {
                                    localStorage.UserName = base.encode(this.frm.UserName);
                                    localStorage.Pwd = '';
                                    window.location = '@HttpUtil.GetUrl("Account/SignIn")';
                                }
                                else {
                                    this.msg = result.msg;
                                    $("#myModal").modal({ backdrop: 'static' });
                                }
                            }.bind(this));
                        }
                        else {
                            this.msg = '有信息格式不正确,请重新确认';
                            $("#myModal").modal({ backdrop: 'static' });
                        }
                    }
                },
                computed: {
                    isUserNameValid: function () {
                        return ((/^\w{2,20}$/g).test(this.frm.UserName) && !(/^\d+$/g).test(this.frm.UserName)) || (/^1[34578]\d{9}$/g).test(this.frm.UserName);
                    },
                    isEmailValid: function () {
                        return !this.frm.Email || (/^\w+([-+.]\w+)*@@\w+([-.]\w+)*\.\w+([-.]\w+)*$/g).test(this.frm.Email);
                    }
                },
                created: function () {
                    this.$watch('frm.UserName', function (newVal, oldVal) {
                        if ((/^1[34578]\d{9}$/g).test(newVal)) {
                            this.frm.CellPhone = newVal;
                        }
                    });
                }
            })
        })
    </script>
</body>
</html>
