<modal-dialog id="chooseContactModal" other-class="modal-lg">
    <h4 slot="header" class="modal-title text-center" id="myModalLabel" style="font-weight:bold;">选择客户</h4>
    <div slot="body">
        <div class="row">
            <div class="col-md-12">
                <div class="tab-pane fade in active">
                    <div class="form-inline" role="form">
                        <div class="form-group" style="margin-right:6px;">
                            <label class="control-label hidden-xs hidden-sm">客户姓名：</label>
                            <input type="text" class="form-control" v-model="contactSearch.Name" placeholder="请输入客户姓名" />
                        </div>
                        <div class="form-group" style="margin-right:6px;">
                            <label class="control-label hidden-xs hidden-sm">手机号码：</label>
                            <input type="text" class="form-control" v-model="contactSearch.Mobile" placeholder="手机号码" />
                        </div>
                        <div class="form-group" style="margin-right:6px;">
                            <label class="control-label hidden-xs hidden-sm">地址：</label>
                            <input type="text" class="form-control" v-model="contactSearch.Address" placeholder="请输入地址" />
                        </div>
                        <div class="form-group">
                            <button type="button" class="btn btn-info btn-block" v-on:click="getContactList(contactSearch.PageIndex=0)">查询</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" style="margin-top:10px;">
                        <thead>
                            <tr>
                                <th>选择</th>
                                <th>客户姓名</th>
                                <th>手机号码</th>
                                <th>地址</th>
                            </tr>
                        </thead>
                        <tbody v-cloak>
                            <tr v-for="item in contactList" :key="item.Id" v-on:click="currentContact=item" v-on:dblclick="hidePanel('#chooseContactModal')">
                                <td>
                                    <input v-model="currentContact" type="radio" v-bind:value="item">
                                </td>
                                <td>{{item.ContactName}}</td>
                                <td>{{item.Mobile}}</td>
                                <td>{{item.Address}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <pager v-on:reload="getContactList" v-bind:total="contactTotal" v-bind:page-index.sync="contactSearch.PageIndex" v-bind:page-size.sync="contactSearch.PageSize"></pager>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <button class="btn btn-info btn-block" data-dismiss="modal"> 关闭</button>
            </div>
        </div>
    </div>
    <div slot="footer" style="display:none"></div>
</modal-dialog>