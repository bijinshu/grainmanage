@using GrainManage.Web
<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@GlobalResx.SysName</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.2.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/vue.js"></script>
    <script src="~/Scripts/components/pager.js"></script>
    @RenderSection("HeaderSection", false)
</head>
<body>
    <div class="container" style="margin-top:20px;">
        <div class="row">
            <div class="col-lg-12 ">
                <nav class="navbar navbar-inverse" role="navigation">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#example-navbar-collapse">
                            <span class="sr-only">切换导航</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#">首页</a>
                    </div>
                    <div class="collapse navbar-collapse " id="example-navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li>
                                <a href='@HttpUtil.GetUrl("/Price/Index")'>价格</a>
                            </li>
                            <li>
                                <a href='@HttpUtil.GetUrl("/Contact/Index")'>联系人</a>
                            </li>
                            <li>
                                <a href='@HttpUtil.GetUrl("/Trade/Index")'>收购</a>
                            </li>
                            <li>
                                <a href='@HttpUtil.GetUrl("/Trade/Index")'>销售</a>
                            </li>
                            <li>
                                <a href='@HttpUtil.GetUrl("/Trade/Index")'>零售</a>
                            </li>
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown">个人空间<span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href='@HttpUtil.GetUrl("/Account/ChangePassword")'>更改密码</a></li>
                                    <li><a href='@HttpUtil.GetUrl("/Account/SignOut")'>注销</a></li>
                                </ul>
                            </li>
                        </ul>
                        <ul class="nav navbar-nav pull-right">
                            <li class="dropdown">
                                <form class="navbar-form" role="search">
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="关键字" />
                                        <span class="input-group-btn">
                                            <button class="btn btn-primary" type="button">搜索</button>
                                        </span>
                                    </div>
                                </form>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                @RenderBody()
            </div>
        </div>
    </div>
    @RenderSection("FooterSection", false)
</body>
</html>
