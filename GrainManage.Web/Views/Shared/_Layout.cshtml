@using GrainManage.Web
@using GrainManage.Web.Common
@using GrainManage.Web.Services
@{
    var userId = CookieUtil.GetCookie(GlobalVar.CookieName, GlobalVar.UserId);
    var cacheClient = DependencyResolver.Current.GetService<GrainManage.Common.ICache>();
    var userInfo = cacheClient.Get<GrainManage.Web.Models.UserInfo>(CacheKey.GetUserKey(userId));
    var menuList = CommonService.GetMenus();
    if (!userInfo.Roles.Contains(1))
    {
        var auths = CommonService.GetAuths(userInfo.Roles);
        CommonService.RemoveNotValid(menuList, auths);
    }
}
<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@GlobalResx.SysName</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/vue.js"></script>
    <script src="~/Scripts/Shared/common-tool.js"></script>
    <script src="~/Scripts/components/pager.js"></script>
    <script src="~/Scripts/components/modal-dialog.js"></script>
    @RenderSection("HeaderSection", false)
</head>
<body>
    <div class="container" style="margin-top:20px;">
        <div class="row">
            <div class="col-md-12 ">
                <nav class="navbar navbar-inverse" role="navigation">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#example-navbar-collapse">
                            <span class="sr-only">切换导航</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="@HttpUtil.GetUrl("/Home/Index")">
                            <span class="glyphicon glyphicon-grain"></span>
                            <span>首页</span>
                        </a>
                    </div>
                    <div class="collapse navbar-collapse " id="example-navbar-collapse">
                        <ul class="nav navbar-nav">
                            @foreach (var menu in menuList)
                            {
                                if (menu.children != null && menu.children.Any())
                                {
                                    <li class="dropdown">
                                        <a class="dropdown-toggle btn btn-lg" data-toggle="dropdown">@menu.text &nbsp;<span class="caret"></span></a>
                                        <ul class="dropdown-menu">
                                            @foreach (var item in menu.children)
                                            {
                                                <li><a href='@HttpUtil.GetUrl(item.url)'>@item.text</a></li>
                                            }
                                        </ul>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a class="btn btn-lg" href='@HttpUtil.GetUrl(menu.url)'>@menu.text</a>
                                    </li>
                                }
                            }
                        </ul>
                        <ul class="nav navbar-nav pull-right hidden-xs hidden-sm">
                            <li class="dropdown">
                                <form class="navbar-form" role="search">
                                    <div class="input-group">

                                        <span class="badge btn" style="margin-top:8px;">
                                            <span class="glyphicon glyphicon-user"></span> @CookieUtil.GetCookie(GlobalVar.CookieName, GlobalVar.UserName)
                                        </span>
                                    </div>
                                </form>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    @RenderBody()
    @RenderSection("FooterSection", false)
</body>
</html>
